@model IEnumerable<BookstoreManagement.Models.Book>

<h2>Books List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Price</th>
            <th>Genre</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>@book.Price</td>
                <td>@book.Genre</td>
                <td>
                    <a asp-action="Details" asp-route-Id="@book.BookId" class="btn btn-info btn-sm">View</a>
                    <a asp-action="Edit" asp-route-Id="@book.BookId" class="btn btn-warning btn-sm">Edit</a>
                    <form asp-action="Remove" asp-route-Id="@book.BookId" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this book?');">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Add New Book</a>
